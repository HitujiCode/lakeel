document.addEventListener("DOMContentLoaded",(function(){const e=document.querySelector(".js-pageTop");e&&e.addEventListener("click",(function(e){e.preventDefault(),window.scrollTo({top:0,behavior:"smooth"})}));const t=document.querySelector(".js-hamburger"),s=document.querySelector(".js-drawer"),o=document.querySelector(".js-header");if(t&&s&&o){t.addEventListener("click",(function(){const e=window.innerWidth-document.documentElement.clientWidth;if(s.classList.contains("is-open"))o.style.width="",s.style.width="",document.body.classList.remove("is-noscroll");else{o.offsetWidth;o.style.width=`calc(100% - ${e}px)`,s.style.width=`calc(100% - ${e}px)`,document.body.classList.add("is-noscroll")}t.classList.toggle("is-open"),s.classList.toggle("is-open")})),s.addEventListener("click",(function(){document.body.classList.remove("is-noscroll"),o.style.width="",s.style.width="",t.classList.remove("is-open"),s.classList.remove("is-open")}));s.querySelectorAll("a[href]").forEach((e=>{e.addEventListener("click",(function(){document.body.classList.remove("is-noscroll"),o.style.width="",s.style.width="",t.classList.remove("is-open"),s.classList.remove("is-open")}))}))}function i(e,t={}){const s={loop:!0,slidesPerView:"auto",spaceBetween:20,speed:6e3,autoplay:{delay:0},...t};new Swiper(e,s)}i(".js-top-swiper"),i(".js-bottom-swiper",{autoplay:{delay:0,reverseDirection:!0}})}));